<body class="body2">
  <header class="user01">
    RECIPTAP
  </header>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <div class="wrap">
    <div class="container">
      <div class="login-box">
        <h1>新規登録はこちら</h1><br>
        <form action>
          <table class="loginTable">
            <tbody>
            <%# 変更 %>
           
            
              <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="field">
                  <%= f.label :name, "氏名"%><br />
                  <%= f.text_field :name, id:"user_name", class:"form-contl", autofocus: true, placeholder:"山田太郎" %>
                </div>

              
              <div class="field">
                <%= f.label :email, "メールアドレス"%><br />
                <%= f.email_field :email, id:"user_email", class:"form-contl", autocomplete: "email", placeholder:"a@com" %>
              </div>

                <div class="field">
                  <%= f.label :password, "パスワード"%>
                  <%= f.password_field :password, id:"user_password", class:"form-contl", autocomplete: "new-password", placeholder: "6文字以上の半角英数字" %>
                </div>

                <div class="field">
                <%= f.label :password_confirmation, "パスワード再入力"%>
                <%= f.password_field :password_confirmation, id:"user_password_confirmation", class:"form-contl", autocomplete: "new-password", placeholder:"パスワードを再入力" %>
                </div>

                <div class="actions">
                <%= f.submit "登録", class:'animoDepthButton'%>
                </div>
                <%= render "devise/shared/links" %>
            <% end %>
            </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</body>