<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="user01"><a href="/">RECEIPTAP</a></div>
        <div class="user02">
          <% if user_signed_in? %>
            <%= current_user.name %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>



<body class="body2">
<div class="main-text">領収書一覧</div>

      <div class="receipt-name2">
      <%=link_to '領収書を保存してください。', new_receipt_path %>
      </div>

          <%# 領収書一覧 %>
    <% @receipts.each do |receipt| %>
      <ul class="container">
        <li class="receipt">
        <div class="receipt-date">
        領収日
        <%= receipt.date %>
        </div>
          <div>
            <%= image_tag(receipt.image) %>
          </div>
          <div class="receipt-category">
            <%= receipt.category.name %>
          </div>
          領収内容
          <div class="receipt-text">
            <%= receipt.comment %>
          </div>
        </li>
      </ul>
    <% end %>
</body>

